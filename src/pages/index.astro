---
layout: "../layouts/Layout.astro";
import "../styles/global.css";
---

<header class="header">
    <h1 class="logo">Thai Bowl</h1>
    <div class="button-group">
        <a class="menu-btn" href="#menu">Menu</a>
        <a class="order-btn" href="#order-online">Order Online</a>
    </div>
</header>

<div class="imgbox">
    <img class="center-fit" src="src/assets/logo.png" alt="Thai Bowl Logo">
</div>

<h1 class="font-bold text-3xl m-5">Thai Bowl Logo</h1>

<nav>
    <a class="m-5 link" href="#home">Home</a>
    <a class="m-5 link" href="#menu">Menu</a>
    <a class="m-5 link" href="#order-online">Order Online</a>
</nav>

<h2 class="banner" style="background-color: #BA2430">10% discount for UIC students</h2>

<div class="flex flex-col">
    <h1 class="banner font-bold text-2xl m-5">Gallery</h1>
    <div class="flex flex-row" id="photos">
        <img class="" src="src/assets/photo3.png" />
        <img class="" src="src/assets/photo3.png" />
        <img class="" src="src/assets/photo3.png" />
        <img class="" src="src/assets/photo3.png" />
    </div>
	
    <h1 class="banner font-bold text-2xl m-5">Location</h1>
    <section style="display: grid; flex-direction: column; gap: 1rem; grid-template-column: 65% 35%; grid-template-row: 50% 50%; align-items: center"> 
