---
layout: "../layouts/Layout.astro";
import "../styles/global.css";
import Carousel from "../components/Carousel.astro";
---

<body>
  <!-- <head> <link rel="stylesheet" href="https://use.typekit.net/wsv5iwd.css" /> </head> -->

  <header class="header">
    <a class="home-btn" href="/">Thai Bowl</a>
    <div class="button-group">
      <a class="menu-btn" href="/menu">Menu</a>
      <a class="order-btn" href="/order-online">Order Online</a>
    </div>
  </header>
  <!-- 
<Carousel>
    
</Carousel> -->

  <!-- Big Thai bowl picture -->
  <div class="imgbox">
    <img
      style="max-width: 100%;"
      class="center-fit"
      src="src/assets/logo.png"
      alt="Thai Bowl Banner"
    />
  </div>

  <!-- <div class="greenGalleryBox">
    test
</div> -->

  <h2
    class="banner"
    style="background-color: #BA2430; color: white; margin-top: 1rem;"
  >
    10% discount for UIC students
  </h2>

  <!-- <h1 class="banner font-bold text-2xl m-5">Gallery</h1> -->
  <div class="container" id="photos">
    <img style="max-width: 100%" src="src/assets/fried-rice.png" />
    <img style="max-width: 100%" src="src/assets/vibe.JPG" />
    <img style="max-width: 100%" src="src/assets/noodles2.png" />
    <!-- <img class="" src="src/assets/photo3.png" /> -->
  </div>

  <h1 class="banner font-bold text-2xl m-5">Location</h1>
  <section
    style="display: grid; flex-direction: column; gap: 1.5rem; grid-template-column: 65% 35%; grid-template-row: 50% 50%; align-items: center"
  >
    <div
      style="grid-area: 1 / 1 / span 2 / span 1; border: 0; width:600; height:450"
    >
      <div
        style="overflow:hidden;resize:none;max-width:100%;width:500px;height:500px;"
      >
        <div
          id="embed-map-display"
          style="height:100%; width:100%;max-width:100%;"
        >
          <iframe
            style="height:100%;width:100%;border:0;"
            frameborder="0"
            src="https://www.google.com/maps/embed/v1/place?q=thai+bowl+chicago&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
          ></iframe>
        </div><a
          class="the-googlemap-enabler"
          href="https://kbj9qpmy.com/bp"
          id="get-data-for-embed-map">Internet Provider</a
        ><style>
          #embed-map-display img.text-marker {
            max-width: none !important;
            background: none !important;
          }
          img {
            max-width: none;
          }
        </style>
      </div>
    </div>
    <div class="square" style="grid-area: 1 / 2 / span 1 / span 1">
      <h3 style="color: white">Hours of Operation:</h3>
      <p style="color: white">Monday - Sunday: 11AM - 7:30PM</p>
      <p><br /></p>
      <h3 style="color: white; font-size: medium">Service Options:</h3>
      <ul style="list-style-type:disc; color: white">
        <li style="display: inline">Outdoor Seating  </li>
        <li style="display: inline">&#8226;  Take-Out</li>
      </ul>
      <!-- <p style="color: white; font-size: medium">-Outdoor Seating        -Take-Out</p> -->
    </div>
    <div class="square" style="grid-area: 2 / 2 / span 1 / span 1">
      <h3 style="color: white">Contact Info:</h3>
      <p style="color: white">(312) 226-9129</p>
      <p style="color: white">(312) 226-5865</p>
      <p style="color: white">FAX: (312) 226-6314</p>
      <p style="color: white">1049 W Taylor St, Chicago, IL 60607</p>
    </div>
  </section>

  <h1 class="banner font-bold text-2xl m-5">About</h1>
  <section>
    <div class="text" style="width: auto; height: auto">
      <img style="float: right" class="" src="src/assets/Restaurant.JPG" />
      <p>
        Neighborhood storefront spot serving authentic and traditional Thai
        food.
      </p>
    </div>
  </section>
  <!-- <h1 class="font-bold text-2xl m-5">Menu</h1> -->
</body>
